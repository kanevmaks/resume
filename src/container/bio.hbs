<main>
    <section>
        <div>
            <h1>{{name}}</h1>
        </div>
        <div>
            Birthdate: {{birthdate}}

            <p>
                Birthplace: {{birthplace}}
            </p>

            <p>
                Deathdate: {{deathdate}}
            </p>

            <p>
                Deathplace: {{deathplace}}
            </p>

            <p>
                Nationality: {{nationality}}
            </p>

            <p>
                Occupation: {{occupation}}
            </p>

            <br>
        </div>

        <div>
            <b> Known for: {{ known_for}}</b>
        </div>
        <section>
            <div>
                <em>{{> title data="Education" big=true}}</em>
                {{#each education}}
                <p>
                    Degree: {{ degree}}
                </p>

                <p>
                    Field: {{ field}}
                </p>

                <p>
                    Instution: {{ institution}}
                </p>

                <p>
                    Year: {{year}}
                </p>
                {{/each}}
            </div>
        </section>

        <section>
            <div>
                <em>{{> title data="Notable publications" big=true}}</em>

                {{#each notable_publications}}
                <p>
                    Title: {{title}}
                </p>
                <p>
                    Year: {{year}}
                </p>
                {{/each}}
            </div>
        </section>

        <section>
            <div>
                <em>{{> title data="Partners" big=true}}</em>
            </div>
            <div>
                {{#each partners}}
                <p>
                    Name: {{name}}
                </p>
                <p>
                    Relationship: {{relationship}}
                </p>
                <P>
                    Years: {{years}}
                </P>
                {{/each}}

            </div>

        </section>

        <section>
            <div>
                <em>{{> title data="Awards" big=true}}</em>
            </div>
            {{#each awards}}
            <div>
                <p>Title: {{title}}</p>
                <p> Year: {{ year}}</p>
                <p>Description: {{description}}</p>
            </div>
            {{/each}}
        </section>

        <section>
            <div>
                <em>{{> title data="Influences" big=true}}</em>
            </div>

            <div>
                Name: {{ influences}}
            </div>
            <br>
            <div>
                Influenced: {{influenced}}
            </div>
            <p> Quotes: {{ quotes}}</p>

        </section>
        <section>
            <div>
                <em>{{> title data=" Major discoveries" big=true}}</em>

            </div>
            <div>
                {{#each major_discoveries}}
                <p>Title: {{title}}</p>
                <p>Year: {{year}}</p>
                <p>Description: {{ description}}</p>

                {{/each}}
            </div>
        </section>

        <section>
            <div>
                <em>{{> title data="Contributions" big=true}}</em>
                {{#with contributions}}
                <p>Title:{{title}}</p>
                <div>
                    <p>Description:</p> {{description}}
                </div>
                <p>Year: {{year}}</p>
                <p>Field:</p>


                {{/with}}
            </div>
        </section>
    </section>

</main>



