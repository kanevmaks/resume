в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
{{#with main}}
  <main>
    <section class="mb-3">
      <div>
        {{>title big=true data=summary.title}}
      </div>
      <div>
        <p>
          {{summary.text}}
        </p>
      </div>
    </section>

    <section>
      <div>
        <h2>{{experience.title}}</h2>
      </div>
      <div>
        <p>
    {{experience.text}}
        </p>
      </div>
    </section>
  </main>
{{/with}}


</div>

